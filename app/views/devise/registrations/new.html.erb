<div class="login-background">
  <div class="login-container">
    <h2 class="login-title">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: params.dig(:user, :email) %>
        <div class="mt-2 fs-small text-danger">
          <%= f.object.errors.full_messages_for(:email).first if f.object.errors[:email].any? %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, autocomplete: "name", class: "form-control", value: params.dig(:user, :name) %>
        <div class="mt-2 fs-small text-danger">
          <%= f.object.errors.full_messages_for(:name).first if f.object.errors[:name].any? %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :birth_day, class: "form-label" %>
        <%= f.date_field :birth_day, autocomplete: "birth_day", class: "form-control", value: params.dig(:user, :birth_day) %>
        <div class="mt-2 fs-small text-danger">
          <%= f.object.errors.full_messages_for(:birth_day).first if f.object.errors[:birth_day].any? %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, autocomplete: "address", class: "form-control", value: params.dig(:user, :address)%>
        <div class="mt-2 fs-small text-danger">
          <%= f.object.errors.full_messages_for(:address).first if f.object.errors[:address].any? %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", value: params.dig(:user, :password) %>
        <div class="mt-2 fs-small text-danger">
          <%= f.object.errors.full_messages_for(:password).first if f.object.errors[:password].any? %>
        </div>
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", value: params.dig(:user, :password_confirmation) %>
        <div class="mt-2 fs-small text-danger">
          <%= f.object.errors.full_messages_for(:password_confirmation).first if f.object.errors[:password_confirmation].any? %>
        </div>
      </div>
      <div class="actions d-grid gap-2">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="login-button mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

