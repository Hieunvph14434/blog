<div class="login-background">
  <div class="login-container">
    <h2 class="login-title">Log in</h2>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: params.dig(:user, :email) %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", value: params.dig(:user, :password) %>
      </div>

      <div class="d-flex justify-content-between">
        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div>
          <%= link_to "Forgot your password?", new_user_password_path, class: "text-dark" %>
        </div>
      </div>
      <div class="actions d-grid gap-2">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div class="login-button mt-3">
      <%= link_to "Sign up", new_user_registration_path %>
    </div>
  </div>
</div>
